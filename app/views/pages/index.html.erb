<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  <% @pages.each do |page| %>
      <tr>
    <td><%= page.name %> </td>
    <td><%= page.title %> </td>
    <td><%= link_to "Edit", edit_page_path(page) %> | <%= link_to "Delete", page_path(page), method: :delete, data: {confirm: 'Are you sure'}, id: "delete_page"%></td>
      </tr>
  <% end %>
</table>
<br/>
<%= link_to "New Page", new_page_path %>